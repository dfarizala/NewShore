﻿
@model NewshoreTest.Web.Models.RequestViewModel

@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="Browse">
    <div class="text-center">
        <h1 class="display-4">Bienvenido</h1>
        <p>Ingrese los datos requeridos</p>
        <div class="card">
            <div class="container-fluid" style="margin:40px">
                <div class="row">
                    <div class="col-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Origen, new { @class = "form-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Origen, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Destino, new { @class = "form-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Destino, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Moneda, new { @class = "form-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Moneda, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Buscar rutas" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-primary">Cancelar</a>
    </div>

</form>

